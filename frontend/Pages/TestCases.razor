@page "/testcases"
@using RqmtMgmtShared
@inject frontend.Services.TestCasesDataService TestCaseService
@inject frontend.Services.TestSuitesDataService TestSuiteService

<h3>Test Cases</h3>
<button class="btn btn-success" @onclick="ShowAddForm">Add Test Case</button>

@if (testCases == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Suite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tc in testCases)
            {
                <tr>
                    <td>@tc.Id</td>
                    <td>@tc.Title</td>
                    <td>@tc.SuiteId</td>
                    <td>
                        <button class="btn btn-sm btn-primary" @onclick="() => Edit(tc)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Delete(tc.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (showForm)
{
    <div class="modal show d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@((editTestCase == null ? "Add" : "Edit")) Test Case</h5>
                    <button type="button" class="close" @onclick="HideForm" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Title</label>
                        <input class="form-control" @bind="formModel.Title" />
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <input class="form-control" @bind="formModel.Description" />
                    </div>
                    <div class="form-group">
                        <label>Test Suite</label>
                        <select class="form-control" @bind="formModel.SuiteId">
                            <option value="">-- Select Suite --</option>
                            @if (testSuites != null)
                            {
                                foreach (var suite in testSuites)
                                {
                                    <option value="@suite.Id">@suite.Name</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" @onclick="SaveTestCase">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="HideForm">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop show"></div>
}

@code {
    List<TestCaseDto>? testCases;
    List<TestSuiteDto>? testSuites;
    TestCaseDto formModel = new() { Title = string.Empty };
    TestCaseDto? editTestCase = null;
    bool showForm = false;

    protected override async Task OnInitializedAsync()
    {
        testCases = await TestCaseService.GetAllAsync();
        testSuites = await TestSuiteService.GetAllAsync();
    }

    async Task Delete(int id)
    {
        if (await TestCaseService.DeleteAsync(id))
            testCases = await TestCaseService.GetAllAsync();
    }

    void Edit(TestCaseDto tc)
    {
        formModel = new TestCaseDto
        {
            Id = tc.Id,
            Title = tc.Title,
            Description = tc.Description,
            SuiteId = tc.SuiteId
            // Add more fields as needed
        };
        editTestCase = tc;
        showForm = true;
    }

    void ShowAddForm()
    {
        formModel = new TestCaseDto { Title = string.Empty };
        editTestCase = null;
        showForm = true;
    }

    void HideForm()
    {
        showForm = false;
    }

    async Task SaveTestCase()
    {
        if (editTestCase != null)
        {
            await TestCaseService.UpdateAsync(formModel);
        }
        else
        {
            await TestCaseService.CreateAsync(formModel);
        }
        testCases = await TestCaseService.GetAllAsync();
        showForm = false;
    }
}
